<launch>
  <arg name="namespace" default="sam0" />

  <node pkg="sam_dead_reckoning" exec="depth_node" name="depth_node" output="screen" namespace="$(var namespace)">
    <param name="robot_name" value="$(var namespace)" />
    <param name="simulation" value="true" />
    <param name="use_sim_time" value="true" />
  </node>

  <node pkg="sam_dead_reckoning" exec="gps_node" name="gps_node" output="screen" respawn="true" namespace="$(var namespace)">
    <param name="robot_name" value="$(var namespace)" />
    <param name="map_frame" value="map" />
    <param name="utm_frame" value="utm" />
    <param name="use_sim_time" value="true" />
  </node>

  <node pkg="sam_dead_reckoning" exec="dr_node" name="dr_node" output="screen" namespace="$(var namespace)">
    <param name="robot_name" value="$(var namespace)" />
    <param name="odom_frame" value="odom" />
    <param name="map_frame" value="map" />
    <param name="utm_frame" value="utm" />
    <param name="dvl_period" value="0.1" />
    <param name="dr_period" value="0.02" />
    <param name="simulation" value="true" />
    <param name="use_sim_time" value="true" />
  </node>

  <node pkg="sam_dead_reckoning" exec="heading_node" name="heading_node" output="screen" namespace="$(var namespace)">
    <param name="use_sim_time" value="true" />
  </node>

  <node pkg="sam_dead_reckoning" exec="visual_tools" name="visual_tools" output="screen" namespace="$(var namespace)">
    <param name="robot_name" value="$(var namespace)" />
    <param name="odom_frame" value="odom" />
    <param name="map_frame" value="map" />
    <param name="utm_frame" value="utm" />
    <param name="use_sim_time" value="true" />
  </node>
</launch>